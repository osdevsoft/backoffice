<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block page_title locale['Administration Panel'] %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href='https://fonts.googleapis.com/css?family=Lato' rel='stylesheet' type='text/css'>
    {#<link rel="stylesheet" href="{{ asset('/fonts/font-awesome/css/font-awesome.min.css') }}">#}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    {#<link rel="stylesheet" href="{{ asset('/css/panel.css?v={{ cache }}') }}">#}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" />
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    {#<script src="/plugins/tinymce/tinymce.min.js"></script>#}

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

    <style>
        {{ css_file_contents }}
    </style>

    <script>
        {{ js_file_contents|raw }}
    </script>

</head>
<body>

<div id="header">
    <h1>{{ locale['Administration Panel'] }}</h1>
    <span><a style="color: white" href="/{{ backoffice_folder }}/session/logout">[ {{ locale['Logout'] }} ]</a></span>
</div>

<div id="navbar">
    {% block header %}
        {% include 'twig_partials/navbar.twig' %}
    {% endblock %}
</div>

<div id="content" style="max-width: 85%">
    {% if alert_message is not null %}
    <div class="alert alert-message alert-{{ alert_message.type }}">{{ alert_message.message|raw }}</div>
    {% endif %}
    {% block contents " " %}
</div>

<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<script>
    $('.content-listing tr').on('click', function(e) {
        if(e.originalEvent.originalTarget.localName != 'a')
        {
            window.location.href = $($(this).find('td.actions a')[0]).attr('href');
        }
    })
    function check_delete(model, id) {
        if(confirm('{{ locale['Are you sure you want to delete this entry?'] }}')) {
            window.location.href = '/{{ backoffice_folder }}/' + model + '/delete/' + id;
        }
    }
</script>

</body>
</html>